<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/padding_medium"
                    android:textAppearance="@style/TextAppearance.Bold"
                    android:textColor="@color/color_grey_dark"
                    android:textSize="@dimen/text_medium"
                    tools:text="Toko Rahayu Elektronik" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/rounded_label"
                    android:paddingBottom="@dimen/padding_4dp"
                    android:paddingLeft="@dimen/padding_medium"
                    android:paddingRight="@dimen/padding_8dp"
                    android:paddingTop="@dimen/padding_4dp"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.Bold"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_extra_small"
                    tools:text="Pengerjaan" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStoreCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:textAppearance="@style/TextAppearance.Bold"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/text_medium"
                    tools:text="Hanifah A" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_store_survey_history_date_of_survey"
                            android:textAppearance="@style/TextAppearance.Bold.Semi"
                            android:textColor="@color/color_grey_soft"
                            android:textSize="@dimen/text_extra_small" />

                        <TextView
                            android:id="@+id/tvDateSurvey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_4dp"
                            android:text="@string/label_store_survey_history_date_of_survey"
                            android:textAppearance="@style/TextAppearance.Bold"
                            android:textColor="@color/color_grey_dark"
                            android:textSize="@dimen/text_medium"
                            tools:text="9 Agustus 2018" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_store_survey_history_time_of_survey"
                            android:textAppearance="@style/TextAppearance.Bold.Semi"
                            android:textColor="@color/color_grey_soft"
                            android:textSize="@dimen/text_extra_small" />

                        <TextView
                            android:id="@+id/tvTimeSurvey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_4dp"
                            android:textAppearance="@style/TextAppearance.Bold"
                            android:textColor="@color/color_grey_dark"
                            android:textSize="@dimen/text_medium"
                            tools:text="09:10:15" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>


