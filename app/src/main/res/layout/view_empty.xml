<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivArrowUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/ivStateEmpty"
            android:src="@drawable/ic_arrow_up"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivStateEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivArrowUp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:src="@drawable/ic_no_store"
            android:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitleMessageEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:textAppearance="@style/TextAppearance.Bold"
        android:textColor="#555555"
        tools:text="Keranjang Kosong" />


    <TextView
        android:id="@+id/tvDescriptionEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Regular"
        android:textColor="#364E56"
        tools:text="Tidak ada produk yangasdn;asdn;asndas;dnsadna bisa ditampilkan untuk saat ini. Silakan klik icon “ + “ menambahkan produk" />


</LinearLayout>
